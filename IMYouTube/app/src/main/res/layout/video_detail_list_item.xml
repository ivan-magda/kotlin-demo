<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/list_item_padding_default">

    <ImageView
        android:id="@+id/iv_detail_video"
        android:layout_width="140dp"
        android:layout_height="84dp"
        android:layout_marginTop="@dimen/iv_margin_vertical"
        android:contentDescription="@string/cd_video_image_view"
        android:paddingEnd="@dimen/iv_padding_horizontal_medium"
        android:paddingRight="@dimen/iv_padding_horizontal_medium"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/tv_detail_name"
        style="@style/TextAppearance.AppCompat.Body2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_detail_video"
        app:layout_constraintTop_toTopOf="@id/iv_detail_video"
        tools:text="Title" />

    <TextView
        android:id="@+id/tv_detail_subtitle"
        style="@style/TextAppearance.AppCompat.Caption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_detail_name"
        app:layout_constraintTop_toBottomOf="@id/tv_detail_name"
        tools:text="Subtitle" />

</android.support.constraint.ConstraintLayout>