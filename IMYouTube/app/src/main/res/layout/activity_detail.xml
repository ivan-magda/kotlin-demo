<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ivanmagda.imyoutube.activities.VideoDetailActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_video_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/rv_padding_default"
        android:paddingEnd="@dimen/rv_padding_default"
        android:paddingLeft="@dimen/rv_padding_default"
        android:paddingRight="@dimen/rv_padding_default"
        android:paddingStart="@dimen/rv_padding_default" />
</android.support.constraint.ConstraintLayout>
